{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Stardew Audio Mod Generator",
  "version": "3.0.0",
  "identifier": "com.kazinhols.stardew-audio-mod-generator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Stardew Audio Mod Generator",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Â© 2024 Kazinhols",
    "category": "Utility",
    "shortDescription": "Gerador de mods de audio para Stardew Valley",
    "longDescription": "Crie mods de audio para Stardew Valley 1.6+ de forma facil e visual.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      },
      "rpm": {
        "depends": []
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installMode": "currentUser",
        "languages": ["PortugueseBR", "English"],
        "displayLanguageSelector": true
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
